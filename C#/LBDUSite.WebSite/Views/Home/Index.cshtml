@inject LBDUSite.Services.ILocalizationService Localization
@model LBDUSite.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "หน้าแรก";
    var currentLang = Localization.GetCurrentLanguage();
}

<!-- Hero Section with YouTube Live -->
<section class="hero-modern">
    <div class="hero-modern-container">
        <div class="hero-content-grid">
            <!-- Left: Content -->
            <div class="hero-text">
                <div class="hero-badge">
                    <i class="fas fa-chart-line"></i>
                    <span>แพลตฟอร์มกองทุนรวมอันดับ 1</span>
                </div>
                <h1 class="hero-title-modern">
                    ลงทุนกองทุนรวม<br>
                    <span class="gradient-text">ฉลาดและมั่นคง</span>
                </h1>
                <p class="hero-description">
                    เปรียบเทียบและเลือกกองทุนจาก <strong>@Model.Stats.TotalAMC+ บริษัทจัดการ</strong>
                    กว่า <strong>@Model.Stats.TotalFunds+ กองทุน</strong> ในที่เดียว
                </p>

                <!-- Quick Actions -->
                <div class="hero-actions">
                    <a href="@Url.Action("Index", "Fund")" class="btn btn-primary btn-hero">
                        <i class="fas fa-search"></i>
                        ค้นหากองทุน
                    </a>
                    <a href="@Url.Action("Index", "Compare")" class="btn btn-outline-hero">
                        <i class="fas fa-balance-scale"></i>
                        เปรียบเทียบกองทุน
                    </a>
                </div>

                <!-- Stats -->
                <div class="hero-stats-modern">
                    <div class="stat-modern">
                        <div class="stat-value-modern">@Model.Stats.TotalFunds+</div>
                        <div class="stat-label-modern">กองทุนรวม</div>
                    </div>
                    <div class="stat-modern">
                        <div class="stat-value-modern">@Model.Stats.TotalAMC+</div>
                        <div class="stat-label-modern">บริษัทจัดการ</div>
                    </div>
                    <div class="stat-modern">
                        <div class="stat-value-modern">@(Model.Stats.TotalInvestors / 1000)K+</div>
                        <div class="stat-label-modern">นักลงทุน</div>
                    </div>
                    <div class="stat-modern">
                        <div class="stat-value-modern">@Model.Stats.TotalVolume</div>
                        <div class="stat-label-modern">มูลค่าทั้งหมด</div>
                    </div>
                </div>
            </div>

            <!-- Right: YouTube Live -->
            <div class="hero-video">
                @if (Model.LiveVideo != null && Model.LiveVideo.IsLive)
                {
                    <div class="live-video-card">
                        <div class="live-badge">
                            <span class="live-dot"></span>
                            LIVE
                        </div>
                        <div class="video-container">
                            <iframe src="@Model.LiveVideo.EmbedUrl?autoplay=1&mute=0&loop=0"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen>
                            </iframe>
                        </div>
                        <div class="video-info">
                            <h3>@Model.LiveVideo.Title</h3>
                            <p>@Model.LiveVideo.Description</p>
                            <div class="video-meta">
                                <span><i class="fas fa-eye"></i> @Model.LiveVideo.ViewerCount.ToString("N0") คนกำลังดู</span>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="hero-illustration">
                        <i class="fas fa-chart-line"></i>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- AMC Section -->
<section class="section-amc">
    <div class="section-container">
        <div class="section-header">
            <div>
                <h2 class="section-title">
                    <i class="fas fa-building"></i>
                    บริษัทจัดการกองทุนชั้นนำ
                </h2>
                <p class="section-subtitle">เลือกลงทุนจากบริษัทจัดการที่คุณไว้วางใจ</p>
            </div>
            <a href="#" class="view-all-link" id="toggleAMC">
                <span id="amcToggleText">ดูทั้งหมด</span>
                <i class="fas fa-chevron-down" id="amcToggleIcon"></i>
            </a>
        </div>

        <div class="amc-grid" id="amcGrid">
            @for (int i = 0; i < Math.Min(10, Model.AMCList.Count); i++)
            {
                var amc = Model.AMCList[i];
                var isHidden = i >= 5 ? "amc-hidden" : "";
                <a href="@Url.Action("Index", "Fund", new { amc = amc.AMCId })" class="amc-card @isHidden" data-amc-index="@i">
                    <div class="amc-logo">@amc.Logo</div>
                    <div class="amc-info">
                        <h3 class="amc-name">@amc.NameTH</h3>
                        <p class="amc-count">@amc.FundCount กองทุน</p>
                    </div>
                    <i class="fas fa-arrow-right amc-arrow"></i>
                </a>
            }
        </div>
    </div>
</section>

<!-- Fund Categories -->
<section class="section-categories">
    <div class="section-container">
        <div class="section-header">
            <div>
                <h2 class="section-title">
                    <i class="fas fa-layer-group"></i>
                    เลือกตามประเภทกองทุน
                </h2>
                <p class="section-subtitle">เลือกประเภทกองทุนที่เหมาะกับเป้าหมายการลงทุนของคุณ</p>
            </div>
            <a href="#" class="view-all-link" id="toggleCategories">
                <span id="categoryToggleText">ดูทั้งหมด</span>
                <i class="fas fa-chevron-down" id="categoryToggleIcon"></i>
            </a>
        </div>

        <div class="category-grid" id="categoryGrid">
            @for (int i = 0; i < Model.Categories.Count; i++)
            {
                var category = Model.Categories[i];
                var isHidden = i >= 5 ? "category-hidden" : "";
                <a href="@Url.Action("Index", "Fund", new { category = category.CategoryName })"
                   class="category-card-modern @isHidden"
                   data-category-index="@i"
                   style="border-left-color: @category.Color">
                    <div class="category-icon-modern" style="background: @category.Color">
                        <i class="fas @category.IconClass"></i>
                    </div>
                    <div class="category-content">
                        <h3 class="category-name-modern">@category.CategoryName</h3>
                        <p class="category-desc">@category.Description</p>
                        <div class="category-meta">
                            <span class="category-count-modern">
                                <i class="fas fa-folder"></i>
                                @category.FundCount กองทุน
                            </span>
                            <i class="fas fa-arrow-right category-arrow"></i>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>

<!-- Events & Activities -->
<section class="section-events">
    <div class="section-container">
        <div class="section-header">
            <div>
                <h2 class="section-title">
                    <i class="fas fa-calendar-alt"></i>
                    กิจกรรมและสัมมนา
                </h2>
                <p class="section-subtitle">เรียนรู้และพัฒนาทักษะการลงทุนกับเรา</p>
            </div>
        </div>

        <div class="events-grid">
            @foreach (var evt in Model.EventActivities)
            {
                <div class="event-card">
                    @if (evt.DaysUntilEvent <= 7)
                    {
                        <div class="event-badge event-soon">เหลือเวลาอีก @evt.DaysUntilEvent วัน</div>
                    }

                    <div class="event-type-badge event-type-@evt.EventType.ToLower()">
                        @evt.EventType
                    </div>

                    <div class="event-date">
                        <div class="event-day">@evt.EventDate.Day</div>
                        <div class="event-month">@evt.EventDate.ToString("MMM", new System.Globalization.CultureInfo("th-TH"))</div>
                    </div>

                    <div class="event-content">
                        <h3 class="event-title">@evt.Title</h3>
                        <p class="event-description">@evt.Description</p>

                        <div class="event-meta">
                            @if (evt.IsOnline)
                            {
                                <span class="event-meta-item">
                                    <i class="fas fa-video"></i>
                                    Online
                                </span>
                            }
                            else
                            {
                                <span class="event-meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    @evt.Location
                                </span>
                            }

                            @if (evt.IsFree)
                            {
                                <span class="event-meta-item event-free">
                                    <i class="fas fa-check-circle"></i>
                                    ฟรี
                                </span>
                            }
                            else
                            {
                                <span class="event-meta-item">
                                    <i class="fas fa-ticket-alt"></i>
                                    @evt.Price?.ToString("N0") บาท
                                </span>
                            }
                        </div>

                        <a href="@evt.RegistrationUrl" class="btn btn-event">
                            <i class="fas fa-user-plus"></i>
                            ลงทะเบียน
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Funds -->
