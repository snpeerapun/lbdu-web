@inject LBDUSite.Services.ILocalizationService Localization

<!DOCTYPE html>
<html lang="@(Localization.GetCurrentLanguage() == "th" ? "th" : "en")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - LBDU Fund Platform</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header class="header" id="header">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <div class="logo-icon">LB</div>
                <div class="logo-text">
                    <h1>LBDU</h1>
                    <span>Fund Platform</span>
                </div>
            </a>

            <nav>
                <ul class="nav-menu">
                    <li>
                        <a href="@Url.Action("Index", "Home")"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="fas fa-home"></i>
                            @Localization.GetString("Nav_Home")
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Fund")"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Fund" ? "active" : "")">
                            <i class="fas fa-chart-line"></i>
                            @Localization.GetString("Nav_AllFunds")
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Compare")"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Compare" ? "active" : "")">
                            <i class="fas fa-graduation-cap"></i>
                            @Localization.GetString("Nav_Compare")
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Learning")"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Learning" ? "active" : "")">
                            <i class="fas fa-newspaper"></i>
                            @Localization.GetString("Nav_Learning")
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Article")"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Article" ? "active" : "")">
                            <i class="fas fa-newspaper"></i>
                            @Localization.GetString("Nav_Articles")
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Contact")"
                           class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")">
                            <i class="fas fa-envelope"></i>
                            @Localization.GetString("Nav_Contact")
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="header-actions">
                <!-- Language Switcher -->
                @Html.Partial("_LanguageSwitcher")

            </div>
 
        </div>
    </header>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-grid">
                <!-- About Section -->
                <div class="footer-section">
                    <div class="footer-logo">
                        <div class="logo-icon">LB</div>
                        <div class="logo-text">
                            <h3>LBDU</h3>
                            <span>Fund Platform</span>
                        </div>
                    </div>
                    <p>
                        @if (Localization.GetCurrentLanguage() == "th")
                        {
                            <text>แพลตฟอร์มกองทุนรวมครบวงจร เปรียบเทียบและเลือกกองทุนจากทุกบริษัทจัดการในที่เดียว</text>
                        }
                        else
                        {
                            <text>Complete mutual fund platform. Compare and select funds from all management companies in one place</text>
                        }
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="footer-section">
                    <h4>@Localization.GetString("Nav_Home")</h4>
                    <ul class="footer-links">
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <i class="fas fa-chevron-right"></i> @Localization.GetString("Nav_Home")
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Fund")">
                                <i class="fas fa-chevron-right"></i> @Localization.GetString("Nav_AllFunds")
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Article")">
                                <i class="fas fa-chevron-right"></i> @Localization.GetString("Nav_Articles")
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Contact")">
                                <i class="fas fa-chevron-right"></i> @Localization.GetString("Nav_Contact")
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="footer-section">
                    <h4>@Localization.GetString("Contact_Information")</h4>
                    <ul class="footer-links">
                        <li>
                            <a href="tel:02-xxx-xxxx">
                                <i class="fas fa-phone"></i> 02-xxx-xxxx
                            </a>
                        </li>
                        <li>
                            <a href="mailto:info@lbdu.com">
                                <i class="fas fa-envelope"></i> info@lbdu.com
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-map-marker-alt"></i>
                                @if (Localization.GetCurrentLanguage() == "th")
                                {
                                    <text>กรุงเทพฯ ประเทศไทย</text>
                                }
                                else
                                {
                                    <text>Bangkok, Thailand</text>
                                }
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year LBDU Fund Platform. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        function toggleMobileMenu() {
            document.querySelector('.nav-menu').classList.toggle('active');
        }
    </script>
</body>
</html>
