@model LBDUSite.ViewModels.ArticleCardViewModel

<div class="article-card" onclick="location.href='@Url.Action("Detail", "Article", new { slug = Model.Slug })'">
    <div class="article-image">
        <img src="@Model.DefaultImageUrl" alt="@Model.Title" onerror="this.src='/images/default-article.jpg'" />
        @if (Model.IsFeatured)
        {
            <span class="article-badge featured">
                <i class="fas fa-star"></i> แนะนำ
            </span>
        }
        @if (Model.IsPopular)
        {
            <span class="article-badge popular">
                <i class="fas fa-fire"></i> ยอดนิยม
            </span>
        }
    </div>

    <div class="article-content">
        <div class="article-meta">
            @if (!string.IsNullOrEmpty(Model.CategoryName))
            {
                <span class="article-category">
                    <i class="fas fa-folder"></i> @Model.CategoryName
                </span>
            }
            <span class="article-reading-time">
                <i class="fas fa-clock"></i> @Model.ReadingTime นาที
            </span>
        </div>

        <h3 class="article-title">@Model.Title</h3>

        @if (!string.IsNullOrEmpty(Model.Excerpt))
        {
            <p class="article-excerpt">@Model.Excerpt</p>
        }

        <div class="article-footer">
            <div class="article-author">
                <i class="fas fa-user"></i>
                @Model.AuthorName
            </div>
            <div class="article-info">
                <span class="article-date">
                    <i class="fas fa-calendar"></i>
                    @Model.PublishedDateDisplay
                </span>
                <span class="article-views">
                    <i class="fas fa-eye"></i>
                    @((Model.ViewCount ?? 0).ToString("N0"))
                </span>
            </div>
        </div>
    </div>
</div>

 