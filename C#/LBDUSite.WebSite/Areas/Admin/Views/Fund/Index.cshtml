@model LBDUSite.Areas.Admin.Models.PagedResult<LBDUSite.Areas.Admin.Models.ViewModels.FundListViewModel>
@{
    ViewData["Title"] = "จัดการกองทุน";
}

<div class="page-header">
    <h1><i class="fas fa-chart-pie"></i> จัดการกองทุน</h1>
    <div class="page-actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> เพิ่มกองทุน
        </a>
    </div>
</div>

<!-- Search Bar -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="search-form">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" 
                               name="search" 
                               class="form-control" 
                               placeholder="ค้นหา รหัสกองทุน, ชื่อกองทุน..."
                               value="@ViewBag.SearchTerm">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> ค้นหา
                        </button>
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ล้าง
                            </a>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "ProjId",
                                sortOrder = Model.SortBy?.ToLower() == "projid" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                รหัส
                                @if (Model.SortBy?.ToLower() == "projid")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "ProjNameTH",
                                sortOrder = Model.SortBy?.ToLower() == "projnameth" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                ชื่อกองทุน
                                @if (Model.SortBy?.ToLower() == "projnameth")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>บริษัทจัดการ</th>
                        <th>ความเสี่ยง</th>
                        <th>สถานะ</th>
                        <th class="text-end">NAV ล่าสุด</th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "LastUpdatedFromAPI",
                                sortOrder = Model.SortBy?.ToLower() == "lastupdatedfromapi" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                อัพเดทล่าสุด
                                @if (Model.SortBy?.ToLower() == "lastupdatedfromapi")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center" style="width: 150px;">จัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ProjAbbrName</strong>
                                    <br><small class="text-muted">@item.ProjId</small>
                                </td>
                                <td>
                                    @item.ProjNameTH
                                    @if (item.IsPopular == true)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">
                                            <i class="fas fa-star"></i> ยอดนิยม
                                        </span>
                                    }
                                </td>
                                <td>@item.AMCName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.RiskSpectrum))
                                    {
                                        var riskColor = item.RiskSpectrum switch
                                        {
                                            "1" => "success",
                                            "2" => "success",
                                            "3" => "info",
                                            "4" => "warning",
                                            "5" => "warning",
                                            "6" => "danger",
                                            "7" => "danger",
                                            "8" => "danger",
                                            _ => "secondary"
                                        };
                                        <span class="badge bg-@riskColor">@item.RiskSpectrum</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive == true)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times"></i> Inactive</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.LatestNAV.HasValue)
                                    {
                                        <strong>@item.LatestNAV.Value.ToString("N4")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small>
                                        @if (item.LastUpdatedFromAPI.HasValue)
                                        {
                                            @item.LastUpdatedFromAPI.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = item.Id })" 
                                           class="btn btn-info" 
                                           title="รายละเอียด">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" 
                                           class="btn btn-warning" 
                                           title="แก้ไข">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-danger" 
                                                onclick="confirmDelete(@item.Id, '@item.ProjAbbrName')"
                                                title="ลบ">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">ไม่พบข้อมูล</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @await Html.PartialAsync("_Pagination", Model)
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, fundName) {
            if (confirm(`คุณต้องการลบกองทุน "${fundName}" หรือไม่?`)) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('เกิดข้อผิดพลาด');
                    }
                });
            }
        }
    </script>
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .page-header h1 {
        margin: 0;
        font-size: 24px;
    }
    
    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .pagination-info {
        color: #6c757d;
        font-size: 14px;
    }
    
    .page-size-selector {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .page-size-selector select {
        width: auto;
        display: inline-block;
    }
    
    table th a {
        color: inherit;
        text-decoration: none;
        display: block;
    }
    
    table th a:hover {
        color: #0d6efd;
    }
    
    table th a i.text-muted {
        opacity: 0.3;
    }
</style>
