@model LBDUSite.Areas.Admin.Models.PagedResult<LBDUSite.Areas.Admin.Models.ViewModels.AdminUserListViewModel>
@{
    ViewData["Title"] = "จัดการผู้ดูแลระบบ";
}

<div class="page-header">
    <h1><i class="fas fa-users-cog"></i> จัดการผู้ดูแลระบบ</h1>
    <div class="page-actions">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> เพิ่มผู้ดูแลระบบ
        </a>
    </div>
</div>

<!-- Search Bar -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="search-form">
            <div class="row">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" 
                               name="search" 
                               class="form-control" 
                               placeholder="ค้นหา ชื่อผู้ใช้, ชื่อเต็ม, อีเมล..."
                               value="@ViewBag.SearchTerm">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> ค้นหา
                        </button>
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ล้าง
                            </a>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "Username",
                                sortOrder = Model.SortBy?.ToLower() == "username" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                ชื่อผู้ใช้
                                @if (Model.SortBy?.ToLower() == "username")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "FullName",
                                sortOrder = Model.SortBy?.ToLower() == "fullname" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                ชื่อเต็ม
                                @if (Model.SortBy?.ToLower() == "fullname")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "Email",
                                sortOrder = Model.SortBy?.ToLower() == "email" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                อีเมล
                                @if (Model.SortBy?.ToLower() == "email")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "Role",
                                sortOrder = Model.SortBy?.ToLower() == "role" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                บทบาท
                                @if (Model.SortBy?.ToLower() == "role")
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th>สถานะ</th>
                        <th>
                            <a href="@Url.Action("Index", new { 
                                search = Model.Search,
                                sortBy = "CreatedAt",
                                sortOrder = Model.SortBy?.ToLower() == "createdat" && Model.SortOrder == "asc" ? "desc" : "asc",
                                pageSize = Model.PageSize
                            })">
                                สร้างเมื่อ
                                @if (Model.SortBy?.ToLower() == "createdat" || string.IsNullOrEmpty(Model.SortBy))
                                {
                                    <i class="fas @(Model.SortOrder == "desc" ? "fa-sort-down" : "fa-sort-up")"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort text-muted"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center" style="width: 150px;">จัดการ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Username</strong>
                                </td>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.Role == "Administrator")
                                    {
                                        <span class="badge bg-danger">@item.Role</span>
                                    }
                                    else if (item.Role == "Editor")
                                    {
                                        <span class="badge bg-primary">@item.Role</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Role</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> ใช้งาน</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times"></i> ระงับ</span>
                                    }
                                </td>
                                <td>
                                    <small>
                                        @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        @if (item.LastLoginAt.HasValue)
                                        {
                                            <br><span class="text-muted">Login: @item.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                        }
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = item.Id })" 
                                           class="btn btn-info" 
                                           title="รายละเอียด">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" 
                                           class="btn btn-warning" 
                                           title="แก้ไข">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" 
                                                class="btn btn-danger" 
                                                onclick="confirmDelete(@item.Id, '@item.Username')"
                                                title="ลบ">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                <p class="text-muted">ไม่พบข้อมูล</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @await Html.PartialAsync("_Pagination", Model)
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, username) {
            if (confirm(`คุณต้องการลบผู้ใช้ "${username}" หรือไม่?`)) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: 'POST',
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('เกิดข้อผิดพลาด');
                    }
                });
            }
        }
    </script>
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .page-header h1 {
        margin: 0;
        font-size: 24px;
    }
    
    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .pagination-info {
        color: #6c757d;
        font-size: 14px;
    }
    
    .page-size-selector {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .page-size-selector select {
        width: auto;
        display: inline-block;
    }
    
    table th a {
        color: inherit;
        text-decoration: none;
        display: block;
    }
    
    table th a:hover {
        color: #0d6efd;
    }
    
    table th a i.text-muted {
        opacity: 0.3;
    }
</style>
